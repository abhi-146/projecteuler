
public class Solution {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int t = in.nextInt();
        for(int a0 = 0; a0 < t; a0++){
            int n = in.nextInt();
            System.out.println((long)Math.abs((Math.pow((n*(n+1))/2,2))-(n*(n+1)*(2*n+1))/6));
        
        }
    }
}
